---
import { auth } from "../lib/auth";
const headers = Astro.request.headers;
const sessionRes = await auth.api.getSession({ headers });
const session = sessionRes?.data;
---
<header class="sticky top-0 bg-gray-100 dark:bg-gray-900 p-4 shadow-sm z-10">
    <!-- Your header content -->
    <nav class="max-w-7xl mx-auto px-4 py-3 flex justify-between items-center">
      <a href="/" class="inline-block">
        <span class="text-2xl font-bold bg-gradient-to-r from-blue-500 to-purple-500 bg-clip-text text-transparent">
          Blahaj.bio
        </span>
      </a>
      <div class="flex items-center gap-3">
        {session?.session ? (
          <>
            <a href="/edit" class="px-3 py-1 rounded bg-blue-600 text-white">Edit bio</a>
            <a href="/api/auth/sign-out" class="px-3 py-1 rounded bg-gray-600 text-white">Sign out</a>
          </>
        ) : (
          <a href="/api/auth/sign-in?provider=github&callbackURL=/edit" class="px-3 py-1 rounded bg-green-600 text-white">Sign in</a>
        )}
      </div>
    </nav>
  </header>