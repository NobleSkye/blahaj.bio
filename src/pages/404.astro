---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404 - Page Not Found">
  <div class="min-h-screen flex flex-col bg-gray-900 text-gray-100">

    <main class="flex-grow bg-gray-900 py-16">
      <div class="max-w-3xl mx-auto px-4 text-center">
        <h1 class="text-5xl font-bold text-gray-100 mb-6">404</h1>
        <p class="text-xl text-gray-400 mb-8">
          Oops! The page you are looking for doesn't exist.
        </p>
        <p class="text-lg text-gray-300 mb-12">
          Did you spell it correct?
        </p>
        <a
          href="/"
          class="inline-block px-8 py-4 bg-gradient-to-r from-blue-500 to-purple-500 text-white text-lg font-semibold rounded-lg hover:opacity-90 transition-opacity"
        >
          Go Back to Home
        </a>
      </div>
    </main>
  </div>
</Layout>
