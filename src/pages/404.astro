---
import SiteLayout from '../layouts/SiteLayout.astro';
---

<SiteLayout title="404 - Page Not Found">
  <div class="py-16">
    <div class="max-w-3xl mx-auto px-4 text-center">
      <h1 class="text-5xl font-bold text-gray-900 dark:text-[#e6edf3] mb-6">404</h1>
      <p class="text-xl text-gray-600 dark:text-[#7d8590] mb-8">
        Oops! The page you are looking for doesn't exist.
      </p>
      <p class="text-lg text-gray-500 dark:text-[#656d76] mb-12">
        Did you spell it correct?
        </p>
        <a
          href="/"
          class="inline-block px-8 py-4 bg-gradient-to-r from-blue-500 to-purple-500 text-white text-lg font-semibold rounded-lg hover:opacity-90 transition-opacity"
        >
          Go Back to Home
        </a>
      </div>
    </div>
  </div>
</SiteLayout>
