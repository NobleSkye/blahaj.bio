---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="en" class="dark">
  <head>
    <link rel="icon" type="image/svg" href="/favicon.svg" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <style>
      /* GitHub Dark Theme Variables */
      :root {
        --github-canvas-default: #0d1117;
        --github-canvas-overlay: #161b22;
        --github-canvas-inset: #010409;
        --github-canvas-subtle: #21262d;
        --github-fg-default: #e6edf3;
        --github-fg-muted: #7d8590;
        --github-fg-subtle: #656d76;
        --github-border-default: #30363d;
        --github-border-muted: #21262d;
        --github-accent-emphasis: #1f6feb;
        --github-accent-fg: #58a6ff;
        --github-success-emphasis: #238636;
        --github-success-fg: #56d364;
        --github-danger-emphasis: #da3633;
        --github-danger-fg: #f85149;
      }
    </style>
  </head>
  <body class="min-h-screen bg-github-canvas-default text-github-fg-default">
    <slot />
  </body>
</html>
